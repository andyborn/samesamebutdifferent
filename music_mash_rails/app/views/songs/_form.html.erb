<div id="tape_container">
<%= form_for @song do |f| %>
  
    
    <div id="tape">
      
      <img id="tape_image" src="http://sweetclipart.com/multisite/sweetclipart/files/cassette_tape_retro.png" /> 
      
      <div id="cassette_cog1"><%= image_tag "cassette_cog.png", id: "cog1"%></div>
      <div id="cassette_cog2"><%= image_tag "cassette_cog.png", id: "cog2"%></div>
      <div id="song_input"> 
        <%= f.text_field :song_name, placeholder: "track name", autofocus: true%> 
      </div>
      <div id="artist_input">
        <%= f.text_field :artist_name, placeholder: "artist name" %>
      </div>
      <div id="deezer_url">
        <%= f.hidden_field :deezer_url, placeholder: "deezer url" %>
      </div>  
      
      <div id="song_submit">
        <%= f.submit "Get Songs!" %>
      </div>  
    </div>
  
<% end %>
</div>  